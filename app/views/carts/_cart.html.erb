<div class="container xl:w-3/4 md:w-5/6 sm:w-min">
  <div class="items-center justify-center px-2 sm:px-2 lg:px-4">

    <div class="flex flex-col">
      <div class="-my-2 overflow-x-auto sm:-mx-2 lg:-mx-4">
        <div class="py-2 align-middle inline-block min-w-full sm:px-2 lg:px-4">
          <div class="shadow overflow-hidden border border-blue-200 sm:rounded-lg">

            <table class="min-w-full divide-y divide-gray-200">
              <thead class="t-thead text-center">
                <tr>
                  <td scope="col" class="px-2 lg:px-4 sm:px-auto py-3 text-md font-normal text-gray-100 uppercase tracking-wider">活動編號</td>
                  <td scope="col" class="px-6 py-3 text-md font-normal text-gray-100 uppercase tracking-wider">活動名稱</td>
                  <td scope="col" class="px-6 py-3 text-md font-normal text-gray-100 uppercase tracking-wider">活動票券名稱</td>
                  <td scope="col" class="px-2 lg:px-4 sm:px-auto py-3 text-md font-normal text-gray-100 uppercase tracking-wider">數量</td>
                  <td scope="col" class="py-3 text-md font-normal text-gray-100 uppercase tracking-wider text-right">單價</td>
                  <td scope="col" class="py-3 text-md font-normal text-gray-100 uppercase tracking-wider text-right">小計</td>
                  <td scope="col" class="px-2 lg:px-4 sm:px-auto py-3 text-md font-normal text-gray-100 uppercase tracking-wider">管理</td>
                </tr>
              </thead>

              <tbody>
                <% current_cart.items.each_with_index do |item, index| %>
                  <tr class= "px-6 py-3 text-center">
                    <td><%= index + 1 %></td>
                    <td><%= item.ticket_type.activity.title %></td>
                    <td><%= item.ticket_type.title %></td>
                    <td><%= item.quantity %></td>
                    <td class="text-right mr-2">$<%= item.ticket_type.price %></td>
                    <td class="text-right mr-2">$<%= item.price %></td>
                    <td><%= link_to '刪除',cart_path(@id), method: "delete", data: { confirm: "確認刪除" }%></td>
                    <%# TODO:刪除單一項目，而不是清空購物車 %>
                  </tr>
                <% end %>
                  <tr class= "px-6 py-3 text-center">
                    <td>總計</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td class="text-right">$<%= current_cart.total_price %></td>
                  </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="my-2 justify-between flex">
      <%= link_to '繼續選購', activities_path, class: "actions group relative w-full flex justify-center py-2 px-4 border text-sm font-medium rounded-md  text-gray-900 bg-gray-100 border-red-600 hover:border-red-600 hover:bg-gray-100 hover:text-red-600 hover:no-underline hover:shadow-lg my-2" %>
      <div class="actions group relative w-full flex justify-center py-2 px-4 border-0 border-transparent rounded-md bg-transparent" ></div>
      <%#= link_to '', '#', class: "t-check-button actions group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-transparent bg-transparent" %>
      <%= link_to '結帳', checkout_cart_path, class: "t-check-button actions group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-gray-100 bg-red-600 hover:border-red-600 hover:bg-gray-100 hover:text-red-600 hover:no-underline	hover:shadow-lg hover:border-transparent my-2" %>
    </div>
    <div class="justify-between flex">
      <div class="actions group relative flex justify-center py-2 px-4 border-0 border-transparent rounded-md" ></div>
      <div class="actions group relative flex justify-center py-2 px-4 border-0 border-transparent rounded-md" ></div>
      <%= button_to "清空購物車", cart_path, method: :'delete', class: "t-delete-button actions group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md bg-gray-100 text-red-700 border-red-700" %>
    </div>

  </div>
</div>
<div class="my-10">
</div>